.home-score-segment
  padding 14px 0 40px 0

.home-score-tool
  padding-top 50px

.home-score-col
  display inline-block
  border 1px solid lighten(slate, 80%)
  border-left none
  &:last-child
    border-right none
  &.third
    width 33%
    @media screen and (max-width: 500px)
      width: 100%
      border-right none
      border-bottom none
  &.fourth
    width 25%
    @media screen and (max-width: 500px)
      width: 100%
      border-right none
      border-bottom none
  &.is-row
    border-top none
    @media screen and (max-width: 500px)
      border-bottom 1px solid lighten(slate, 80%)
  &.is-last
    border-right none

label
  padding 8px 0
  text-transform uppercase
  font-size 10px
  display block

.fancy-input, .fancy-select
  font-family 'robotolight'
  color lighten(slate, 20%)
  border none
  outline none
  font-size 16px
  padding 0
  margin 0 0 10px 0
  width 97%
  &:focus
    color darken(slate, 15%)
  &:hover
    color slate

.fancy-select
  appearance none
  background url(../images/select-arrows@2x.png) no-repeat center right
  background-size 8px 12px

label, .fancy-input, .fancy-select
  padding-left 6px

.dotted-divider
  width 34px
  height 4px
  background: url(../images/circle-sep@2x.png) no-repeat 0 0
  background-size 100%
  margin 20px auto

.helper-label
  background-color lighten(slate, 90%)
  text-align center
  width 100%
  font-size 10px
  padding 3px 0
  text-transform uppercase
  color slate
  border-top 1px solid lighten(slate, 80%)

.jump-section
  display block
  width 100%
  font-size 16px
