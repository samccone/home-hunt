.home-score-segment
  padding-bottom spacing-block

.energy-graph
  width: 100%
  height: 240px
  margin: spacing-block * 0.5 0
.home-score-tool
  padding-top spacing-block

.home-score-col
  overflow hidden
  display inline-block
  border 1px solid lighten(slate, 80%)
  border-left none
  &:last-child
    border-right none
  &.third
    width 33%
    @media screen and (max-width: 670px)
      width: 100%
      border-right none
      border-bottom none
  &.fourth
    width 25%
    @media screen and (max-width: 670px)
      width: 100%
      border-right none
      border-bottom none
  &.is-row
    border-top none
    @media screen and (max-width: 670px)
      border-bottom 1px solid lighten(slate, 80%)
  &.is-last
    border-right none

.active-col
  border-top-color slate
  border-bottom-color slate
  label
    transform translate3d(0,-15px, 0)
    opacity 0
  .fancy-select, .fancy-input
    transform translate3d(0, -10px, 0)

label
  padding 8px 0
  text-transform uppercase
  font-size 10px
  display block
  transition all 200ms ease-in

.fancy-input, .fancy-select
  font-family 'robotolight'
  color slate
  border none
  outline none
  font-size 16px
  padding 0
  margin 0 0 10px 0
  width 97%
  transition all 200ms ease-in
  &:focus
    color darken(slate, 15%)
  &:hover
    color slate

.fancy-select
  appearance none
  background url(../images/select-arrows@2x.png) no-repeat center right
  background-size 8px 12px

label, .fancy-input, .fancy-select
  padding-left 6px

.dotted-divider
  width 34px
  height 4px
  background: url(../images/circle-sep@2x.png) no-repeat 0 0
  background-size 100%
  margin 20px auto

.helper-label
  background-color lighten(slate, 90%)
  text-align center
  width 100%
  font-size 10px
  padding 3px 0
  text-transform uppercase
  color slate
  border-top 1px solid lighten(slate, 80%)

.jump-section
  display block
  width 100%
  font-size 16px

.detail-footer
  margin 250px auto 50px auto
  p
    color darken(slate, 15%)

.energy-facts
  margin-top spacing-block-sm - 10
  border-top 1px solid lighten(slate, 80%)

.fact
  padding-top spacing-block-sm 
  p
    font-size 18px
    line-height 23px

