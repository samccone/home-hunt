.detail-view
  .app-overlay
    height: 100%
    background: white

  #app
    height: 10px
    overflow: hidden

.home-detail-headline
  background-color: rgba(blue, .94)
  .close
    margin: spacing-block-tiny

.detail-hero
  padding-top 110px

.address
  width 80%

.home-location
  position: relative
  width: 100%
  height: 180px
  margin: spacing-block-sm  0 0 0
  background-size: cover
  background-repeat: no-repeat
  box-shadow: 0px -5px 16px rgba(0, 0, 0, 0.21)

.home-details
  background: #FFF
  transform translate3d(0,1000px,0)

.detail-view
  .home-details
    transform translate3d(0,0,0)
    transition all 500ms 2s ease-out