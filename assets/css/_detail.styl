.detail-view
  .app-overlay
    height: 100%
    background: white

  #app
    height: 10px
    overflow: hidden

.home-detail
  height 100%

.home-detail-headline
  background-color: rgba(blue, .94)
  padding-bottom spacing-block-sm
  min-height 100%
  .close
    margin: spacing-block-tiny

.detail-hero
  padding-top 110px

.address
  width 72%
  font-size 46px

.home-location
  position: relative
  width: 100%
  height: 180px
  margin: spacing-block-sm  0 0 0
  background-size: cover
  background-repeat: no-repeat
  background-position center center
  box-shadow: 0px -5px 16px rgba(0, 0, 0, 0.21)
  border-top-left-radius 4px
  border-top-right-radius 4px

.pin
  background: url(../images/map-marker@2x.png) no-repeat 0 0
  background-size 100% !important
  height 22px
  width 22px
  margin 0 auto
  top 88px
  position relative

.home-details
  background: #FFF
  transform translate3d(0,1000px,0)
  box-shadow: 0 0 16px rgba(0, 0, 0, 0.21)
  border-bottom-left-radius 4px
  border-bottom-right-radius 4px
  margin-bottom spacing-block

.score-investment-header
  margin-bottom spacing-block-sm - 15

.detail-view
  .home-details
    transform translate3d(0,0,0)
    transition all 500ms 2s ease-out