.score-results
  color slate
  padding: spacing-block 0
  border-top 1px solid lighten(slate, 85%)
  border-bottom 1px solid lighten(slate, 85%)
  margin-bottom spacing-block

.small-block
  width 12px
  height 12px
  border-radius 2px
  margin-right 3px
  display inline-block

thead
  background-color lighten(slate, 90%)
  text-transform uppercase
  font-size 12px
  color slate
  th
    padding 6px 0
    border-bottom 1px solid lighten(slate, 80%)

tbody
  td
    font-size 12px
    text-transform uppercase
    padding 6px 0
    border-bottom 1px solid lighten(slate, 80%)