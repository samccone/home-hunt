.score-results
  color slate
  font-size 38px
  padding-bottom: spacing-block-sm
  border-bottom 1px solid lighten(slate, 85%)

.small-block
  width 12px
  height 12px
  border-radius 2px
  margin-right 3px
  display inline-block

thead
  background-color lighten(slate, 90%)
  text-transform uppercase
  font-size 12px
  color slate
  th
    padding 6px 0
    border-bottom 1px solid lighten(slate, 80%)

tbody
  td
    font-size 12px
    text-transform uppercase
    padding 6px 0
    border-bottom 1px solid lighten(slate, 80%)