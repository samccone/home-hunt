@import "_demographics"
@import "_fact"

.tile
  display: inline-block
  vertical-align: top
  min-height: 315px
  margin: 0 1%
  margin-top: spacing-block-tiny
  background-color: #FFF
  box-shadow: 0 1px 2px rgba(225,231,234,.75)
  transition: all 200ms ease-in
  transform-style: preserve-3d
  transform: translate3d(0, 0, 0)
  position: relative
  border-radius: 3px
  &:hover
    transform: translate3d(0, -6px, 0)
    cursor: pointer
    box-shadow: 0 3px 5px rgba(225,231,234,.75)

.third
  width: 31%
  @media screen and (max-width: 768px)
    width: 48%
  @media screen and (max-width: 400px)
    width: 100%
    margin-right: 0

.full
  width: 100%
  margin-top: spacing-block-tiny

.inner-tile-wrap
  padding: spacing-block-tiny spacing-block-tiny 0 spacing-block-tiny

.home-details
  color: #FFF
  font-size: 11px
  position: absolute
  top: 20px
  left: 20px
  z-index: 10

  .bed
    margin-top: 2px

.home-photo
  overflow: hidden
  width: 100%
  min-height: 200px
  background-position: center center
  background-size: cover
  background-repeat: none

.home-photo-wrap
  padding-bottom: 5%
  min-height: 212px
  position: relative
  border-radius: border-radius

.overlay
  background-color: rgba(22,159,236,0.6)
  position: absolute
  width: 100%
  min-height: 100%

.monthly-summary
  margin: spacing-block-tiny 0

.energy-cost
  color: green
  font-size: 22px
  text-transform: uppercase
  font-family 'roboto_condensedlight'

.green-button-drop
  position: relative
  border: 1px dashed slate
  text-align: center
  font-style: italic
  font-size: 10px
  padding: (spacing-block-tiny + 6)
  color: lighten(slate, 10%)
  cursor: pointer
  input
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%
    opacity: 0
    cursor: pointer

.bottom-meta-info
  border-top: 1px solid lighten(slate, 80%)

.home-meta-col
  text-align: center
  width: 49%
  display: inline-block
  &:first-child
     border-right: 1px solid lighten(slate, 80%)
  h4
    margin: spacing-block-tiny 0
    display: inline-block
    vertical-align: top

.home-icon
  background: url(../images/home@2x.png) no-repeat 0 0

.sq-ft-icon
  background: url(../images/square-ft@2x.png) no-repeat 0 0
