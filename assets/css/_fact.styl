.tile.fact
  min-height: 160px
  @media screen and (max-width: 670px)
    text-align center
    img
      float none !important

  .inner-tile-wrap
    background-color: yellow
    color: #FFF
    padding: (spacing-block - 10)
    margin: spacing-block-tiny
  h2
    text-transform: uppercase
    margin: 10px

  img
    width: 10%
    @media screen and (max-width: 670px)
      width 30%


  .fact-copy
    width: 80%
    margin-left: 3%
    font-size: 20px
    line-height: 25px
    @media screen and (max-width: 670px)
      width 100%
      text-align center
      margin-left 0