.inner-tile-wrap
    .home-details
      .bath #{homeBath} Bath
      .bed #{homeBed} Bed
    .home-photo-wrap
      .overlay
      .home-photo.lazy(data-original=homeImage)
    .monthly-summary
      - if (energyCost)
        .green-button-cost $#{energyCost}
      - else
        .green-button-drop
          p Drag Green Button data for monthly estimate
          input(type="file")
      .post-drop
  .bottom-meta-info
  .home-meta-col
    h4
      span.inline-icon.home-icon
      span.price= homePrice
  .home-meta-col
    h4
      span.inline-icon.sq-ft-icon
      | #{homeSqFt} sq ft.
